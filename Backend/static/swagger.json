{
    "openapi": "3.0.0",
    "info": {
      "description": "Das digitale Abstimmungstool der studentischen Unternehmensberatung consult.IN",
      "version": "1.0.0",
      "title": "consult.IN Abstimmungstool API",
      "contact": {
